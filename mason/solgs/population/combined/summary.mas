<%doc>

=head1 NAME 

/solgs/population/combined/summary.mas - displays combined trials descriptive data.

=AUTHOR

Isaak Y Tecle (iyt2@cornell.edu)

=cut

</%doc>

<%args>

$project_id
$project_name
$project_desc
$markers_no
$traits_no
$stocks_no
$owner => ''
$protocol

</%args>

<%perl>

if (!$owner) {$owner = 'NextGen Cassava Project'; } 
$traits_no = 1 if !$traits_no;



</%perl>

<table class="table">
  <tr>
    <td>
      <& /page/columnar_table.mas,
         data         => [['Name', $project_name],
                          ['Description', $project_desc],
                          ['Owner', $owner],
                         ],
         __alt_freq   => 0,
         __align      => "l",
        &>
    </td>    
    <td>
      <& /page/columnar_table.mas,        
         data       => [['No. of lines ',  $stocks_no],
                        ['No. of traits', $traits_no],
                        ['No. of markers', $markers_no],
			['Genotyping version', $protocol],
                       ],
        __alt_freq  => 1,
        __align     => "l",
        &>
    </td>
  </tr>
</table>
    

 


